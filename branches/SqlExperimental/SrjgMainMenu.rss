	  SelTitle=urlEncode(SelTitle);
          mode=getItemInfo(-1, "selection");
          mode=urlEncode(mode);
          jumpToLink("SelectionEntered");
          "false";
      } else if (userInput == "up" ) {
	  redrawDisplay();
